<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Booking Details"
        android:textColor="#F44109"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hotelName5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageView6"
        android:layout_below="@id/textView10"
        android:textColor="#131313"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/location5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hotelName5"
        android:layout_toRightOf="@+id/imageView7"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:textColor="#131313"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/personName5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nonAcRoomPrice5"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/imageView10"
        android:layout_marginLeft="5dp"
        android:textColor="#131313"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/mobileNumber5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/personName5"
        android:layout_toRightOf="@+id/imageView11"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:textColor="#131313"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/acRoomPrice5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/location5"
        android:layout_toRightOf="@+id/imageView8"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/nonAcRoomPrice5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/acRoomPrice5"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/imageView9"
        android:layout_marginLeft="5dp"
        android:textColor="#131313"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/emailid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mobileNumber5"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/imageView12"
        android:layout_marginLeft="5dp"
        android:textColor="#131313"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/roomtype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_marginTop="20dp"
        android:text="Select Room Type"
        android:textColor="#131313"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/roomtype"
        android:layout_marginTop="10dp"
        android:dropDownSelector="@android:drawable/btn_dropdown" />

    <TextView
        android:id="@+id/noOfRooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner3"
        android:layout_marginTop="10dp"
        android:text="No.Of.Rooms"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/selectNoOfRooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/noOfRooms"
        android:layout_marginTop="10dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        android:digits="1 and 2"
        android:paddingStart="8dp"
        android:hint="Max 2 Rooms are allowed"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:paddingLeft="8dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectNoOfRooms"
        android:layout_marginTop="10dp"
        android:text="Check-in Date: "
        android:textColor="@color/black"
        android:paddingLeft="8dp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/checkInDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:layout_marginTop="10dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        android:clickable="true"
        android:ems="10"
        android:focusable="false"
        android:hint="MM/DD/YYYY"
        android:inputType="date"
        android:maxLength="10"
        android:paddingLeft="8dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/date1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkInDate"
        android:layout_marginTop="10dp"
        android:text="Check-out Date: "
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/checkOutDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date1"
        android:layout_marginTop="10dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        android:clickable="true"
        android:ems="10"
        android:focusable="false"
        android:hint="MM//DD/YYYY"
        android:inputType="date"
        android:maxLength="10"
        android:paddingLeft="8dp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/bookBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkOutDate"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#3366cc"
        android:background="@drawable/bg_button"
        android:textColor="#ffffff"
        android:text="Book" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailid"
        android:layout_marginTop="30dp"
        android:text="-------------------------------------------------------------------------------------------------"
        android:textColor="@color/black"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/ic_hotel"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView6"
        android:layout_marginTop="6dp"
        app:srcCompat="@drawable/ic_location"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView7"
        android:layout_marginTop="6dp"
        app:srcCompat="@drawable/ic_money"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView8"
        app:srcCompat="@drawable/ic_money"
        android:layout_marginTop="6dp"
        tools:ignore="VectorDrawableCompat"/>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView9"
        android:layout_marginTop="6dp"
        app:srcCompat="@drawable/ic_person"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_phone"
        android:layout_below="@+id/imageView10"
        android:layout_marginTop="6dp"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_email"
        android:layout_below="@+id/imageView11"
        android:layout_marginTop="6dp"
        tools:ignore="VectorDrawableCompat" />

</RelativeLayout>