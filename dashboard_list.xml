<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/bg"
    android:layout_marginRight="10dp">

    <RelativeLayout
        android:layout_width="401dp"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/hotelImage8"
            android:layout_width="129dp"
            android:layout_height="129dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:contentDescription="@string/todo"></ImageView>


        <TextView
            android:id="@+id/hotelName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imageView4"
            android:text="@string/hotel_name"
            android:textColor="#F8980A"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/imageView4" />

        <TextView
            android:id="@+id/facilities1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="9dp"
            android:layout_toEndOf="@+id/hotelImage8"
            android:layout_toRightOf="@+id/hotelImage8"
            android:text="@string/facilities2"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/location2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hotelImage8"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-110dp"
            android:layout_toRightOf="@+id/imageView3"
            android:text="@string/location"
            android:textColor="#1393F8"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/imageView3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location2"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="9dp"
            android:layout_toRightOf="@+id/imageView5"
            android:text="@string/facilities1"
            android:textColor="@android:color/holo_red_dark"
            android:layout_toEndOf="@+id/imageView5" />

        <Button
            android:id="@+id/cancelBooking"
            android:layout_width="152dp"
            android:layout_height="38dp"
            android:layout_below="@+id/facilities1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="89dp"
            android:layout_marginRight="89dp"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@+id/hotelImage8"
            android:background="@drawable/bg_button"
            android:backgroundTint="#3366cc"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawableRight="@drawable/ic_arrow_right"
            android:gravity="center"
            android:text="@string/book_now"
            android:textColor="#ffffff"
            android:layout_toEndOf="@+id/hotelImage8" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/hotelName2"
            android:layout_toRightOf="@+id/hotelImage8"
            app:srcCompat="@drawable/ic_location"
            tools:ignore="VectorDrawableCompat"
            android:layout_marginStart="4dp"
            android:contentDescription="@string/todo"
            android:layout_toEndOf="@+id/hotelImage8" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/hotelImage8"
            app:srcCompat="@drawable/ic_hotel"
            tools:ignore="VectorDrawableCompat"
            android:layout_marginStart="4dp"
            android:contentDescription="@string/todo"
            android:layout_toEndOf="@+id/hotelImage8" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hotelImage8"
            android:layout_below="@id/imageView3"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/ic_weekend"
            tools:ignore="VectorDrawableCompat"
            android:contentDescription="@string/todo"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/hotelImage8" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>