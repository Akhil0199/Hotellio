<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        >

        <ImageView
            android:id="@+id/uploadedImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/hoteName6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardViewImage"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/location6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hoteName6"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/updateTotalAcRooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/location6"
        android:layout_marginTop="12dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        android:gravity="center"
        android:hint="Total Ac Rooms"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/updateTotalNonAcRooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updateAcRoomPrice"
        android:layout_marginTop="12dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        android:gravity="center"
        android:hint="Total Non Ac Rooms"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/updateAcRoomPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updateTotalAcRooms"
        android:layout_marginTop="12dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        android:gravity="center"
        android:hint="Ac Room Price"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/updateNonAcRoomPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updateTotalNonAcRooms"
        android:layout_marginTop="12dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        android:gravity="center"
        android:hint="Non Ac Room Price"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updateNonAcRoomPrice"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:text="Update"
        android:textColor="#3366cc" />

    <ProgressBar
        android:id="@+id/prgBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/updateBtn"
        />

</RelativeLayout>
